<theme>
    <view name="gamelist">
        <image name="section-logo">
            <pos>0.01 0.03</pos>
            <maxSize>0.25 0.15</maxSize>
            <path>./_inc/systems/logos/${system.theme}.webp</path>
            <default>./_inc/systems/logos/default.webp</default>
            <color>${highlightColor}</color>
            <brightness>2</brightness>
            <saturation>0</saturation>
            <zIndex>6</zIndex>
        </image>
        <gamelistinfo name="gameCountN">
            <pos>${glistInfo}</pos>
            <origin>0 0</origin>
            <size>0.2 0.05</size>
            <fontSize>${paraFontSize}</fontSize>
            <fontPath>${listFont}</fontPath>
            <horizontalAlignment>left</horizontalAlignment>
            <color>${baseColor}</color>
        </gamelistinfo>
         <text name="developer">
            <pos>0.27 .045</pos>
            <origin>0 0.5</origin>
            <size>0.4 0.05</size>
            <fontSize>${titlelFontSize}</fontSize>
            <fontPath>${h2Font}</fontPath>
            <metadata>developer</metadata>
            <defaultValue>??</defaultValue>
            <color>${highlightColor}</color>
            <lineSpacing>1</lineSpacing>
            <zIndex>65</zIndex>
        </text>
        <text name="gamTitle">
            <pos>0.27 0.09</pos>
            <origin>0 0.5</origin>
            <size>.7 .030</size>
            <fontSize>${titlelFontSize}</fontSize>
            <fontPath>${labelFont}</fontPath>
            <letterCase>uppercase</letterCase>
            <metadata>name</metadata>
            <defaultValue>Unknown</defaultValue>
            <color>${transColor}</color>
            <lineSpacing>1</lineSpacing>
            <zIndex>65</zIndex>
        </text>

         <image name="line1">
            <pos>0.27 .12</pos>
            <origin>0 .5</origin>
            <maxSize>.7 .5</maxSize>
            <path>./_inc/images/line.svg</path>
            <color>${baseColor}25</color>
            <zIndex>70</zIndex>
        </image>

         <rating name="ratinggraphic">
            <pos>.27 .15</pos>
            <origin>0 0.5</origin>
            <size>0 0.03</size>
            <filledPath>./_inc/images/star_filled.svg</filledPath>
            <unfilledPath>./_inc/images/star_unfilled.svg</unfilledPath>
            <color>${highlightColor}</color>
            <zIndex>65</zIndex>
        </rating>

        <image name="date-icon">
            <pos>0.37 .15</pos>
            <origin>0 .5</origin>
            <maxSize>.027 .027</maxSize>
            <path>./_inc/images/release-date.svg</path>
            <color>${highlightColor}</color>
            <brightness>2</brightness>
            <saturation>0</saturation>
            <metadataElement>true</metadataElement>
            <zIndex>65</zIndex>
        </image>

        <datetime name="releasedatedate">
            <pos>.39 .15</pos>
            <origin>0 0.5</origin>
            <fontSize>${labelFontSize}</fontSize>
            <fontPath>${labelFont}</fontPath>
            <letterCase>uppercase</letterCase>
            <format>%Y</format>
            <metadata>releasedate</metadata>
            <defaultValue>????</defaultValue>
            <color>${transColor}</color>
            <lineSpacing>1</lineSpacing>
            <zIndex>65</zIndex>
        </datetime>

        <text name="lastplayedtext">
            <pos>.77 .1</pos>
            <origin>0 0.5</origin>
            <size>0.1 0.05</size>
            <fontSize>${labelFontSize}</fontSize>
            <fontPath>${labelFont}</fontPath>
            <letterCase>uppercase</letterCase>
            <horizontalAlignment>right</horizontalAlignment>
            <text>Last Played:</text>
            <color>${transColor}</color>
            <lineSpacing>1</lineSpacing>
            <zIndex>65</zIndex>
        </text>

        <datetime name="lastPlayedDate">
            <pos>${gridDate}</pos>
            <origin>0 0.5</origin>
            <size>0.1 0.06</size>
            <fontSize>${labelFontSize}</fontSize>
            <fontPath>${labelFont}</fontPath>
            <letterCase>uppercase</letterCase>
            <horizontalAlignment>right</horizontalAlignment>
            <metadata>lastplayed</metadata>
            <defaultValue>unopened</defaultValue>
            <color>${transColor}</color>
            <lineSpacing>1</lineSpacing>
            <zIndex>65</zIndex>
        </datetime>

        <badges name="badges">
            <pos>${gbadge}</pos>
            <origin>0 0</origin>
            <size>.25 .25</size>
            <horizontalAlignment>right</horizontalAlignment>
            <direction>row</direction>
            <lines>1</lines>
            <itemsPerLine>8</itemsPerLine>
            <slots>collection, folder, favorite, completed, kidgame, broken, altemulator, manual</slots>
            <badgeIconColor>cccccc</badgeIconColor>
            <customBadgeIcon badge="collection">./_inc/images/badge-collection.svg</customBadgeIcon>
            <customBadgeIcon badge="folder">./_inc/images/badge-folder.svg</customBadgeIcon>
            <customBadgeIcon badge="favorite">./_inc/images/badge-favorite.svg</customBadgeIcon>
            <customBadgeIcon badge="completed">./_inc/images/badge-completed.svg</customBadgeIcon>
            <customBadgeIcon badge="kidgame">./_inc/images/badge-kidgame.svg</customBadgeIcon>
            <customBadgeIcon badge="broken">./_inc/images/badge-broken.svg</customBadgeIcon>
            <customBadgeIcon badge="controller">./_inc/images/badge-controller.svg</customBadgeIcon>
            <customBadgeIcon badge="altemulator">./_inc/images/badge-altemulator.svg</customBadgeIcon>
            <customBadgeIcon badge="manual">./_inc/images/badge-manual.svg</customBadgeIcon>
            <zIndex>65</zIndex>
        </badges>

        <image name="players-icon">
            <pos>0.425 0.15</pos>
            <origin>0 .5</origin>
            <maxSize>.027 .027</maxSize>
            <path>./_inc/images/icon-players.svg</path>
            <color>${highlightColor}</color>
            <brightness>2</brightness>
            <saturation>0</saturation>
            <metadataElement>true</metadataElement>
            <zIndex>65</zIndex>
        </image>

        <text name="game-players">
            <pos>0.445 .15</pos>
            <origin>0 0.5</origin>
            <size>0.1 0.05</size>
            <fontSize>${labelFontSize}</fontSize>
            <fontPath>${labelFont}</fontPath>
            <letterCase>uppercase</letterCase>
            <metadata>players</metadata>
            <defaultValue>??</defaultValue>
            <color>${transColor}</color>
            <lineSpacing>1</lineSpacing>
            <zIndex>65</zIndex>
        </text>

        <image name="genre-icon">
            <pos>0.475 0.15</pos>
            <origin>0 .5</origin>
            <maxSize>.027 .027</maxSize>
            <path>./_inc/images/genre.svg</path>
            <color>${highlightColor}</color>
            <brightness>2</brightness>
            <saturation>0</saturation>
            <metadataElement>true</metadataElement>
            <zIndex>65</zIndex>
        </image>

         <text name="genre">
            <pos>0.495 .15</pos>
            <origin>0 0.5</origin>
            <size>0.3 0.05</size>
            <fontSize>${labelFontSize}</fontSize>
            <fontPath>${labelFont}</fontPath>
            <letterCase>uppercase</letterCase>
            <metadata>genre</metadata>
            <defaultValue>??</defaultValue>
            <color>${transColor}</color>
            <lineSpacing>1</lineSpacing>
            <zIndex>65</zIndex>
        </text>
         
        <grid name="game-grid">
			<origin>0 0</origin> 
			<pos>.05 .19</pos>	
			<size>.98 .79</size>
            <itemSize>0.1 0.22</itemSize>
            <itemScale>1.2</itemScale>
            <itemSpacing>0.016 0.022</itemSpacing>
            <imageType>cover</imageType>
            <defaultImage>./_inc/images/default-box.webp</defaultImage>
			<scaleInwards>false</scaleInwards>
			<unfocusedItemDimming>0.4</unfocusedItemDimming>
            <unfocusedItemSaturation>0.7</unfocusedItemSaturation>
			<fontSize>${caraFontSize}</fontSize>
			<textColor>ffffff90</textColor>
            <fractionalRows>false</fractionalRows>
			<textRelativeScale>1</textRelativeScale>
			<textBackgroundColor>CCCCCC00</textBackgroundColor>
            <backgroundColor>00000000</backgroundColor>
            <zIndex>10</zIndex>
		</grid>
        <video name="videothumb">
            <pos>0 .19</pos>
            <cropSize>1 1</cropSize>
            <default>./_inc/images/no-media.mp4</default> <!-- Fallback to default cover -->
            <interpolation>nearest</interpolation>
            <pillarboxes>true</pillarboxes>
            <pillarboxThreshold>0.85 0.90</pillarboxThreshold>
            <delay>0</delay>
            <opacity>.16</opacity>
            <fadeInTime>0</fadeInTime>
            <zIndex>2</zIndex>
        </video>
        
        <video name="gamelistBgVideo">
            <pos>0 .19</pos>
            <cropSize>1 1</cropSize>
            <path>./_inc/images/grid-bg.mp4</path> <!-- Path to the specific game video -->
            <zIndex>2</zIndex>
            <brightness>${vidBright}</brightness>
            <saturation>${vidSat}</saturation>
            <color>${vidColor}</color>
        </video>
        <image name="gamelistBgImage">
            <pos>0 .19</pos>
            <cropSize>1 1</cropSize>
            <path>./_inc/images/grid-bg.webp</path>
            <zIndex>1</zIndex>
            <brightness>${vidBright}</brightness>
            <saturation>${vidSat}</saturation>
            <color>${vidColor}</color>
        </image>
    </view>
    <aspectRatio name="4:3">
        <view name="gamelist">
            <image name="section-logo">
                <pos>0.01 0.06</pos>
                <size>0.25 0.1</size> <!-- +.1 0-->
            </image>    
            <text name="lastplayedtext">
                <pos>.76 .1</pos> <!-- -.1 0-->
            </text>
            <image name="date-icon">
                <pos>0.4 .15</pos> <!-- +.04 0-->
            </image>
            <datetime name="releasedatedate">
                <pos>.43 .15</pos> <!-- +.04 0-->
            </datetime>    
            <image name="players-icon">
                <pos>0.465 0.15</pos> <!-- +.04 0-->
            </image>      
            <text name="game-players">
                <pos>0.49 .15</pos> <!-- +.045 0-->
            </text>
            <image name="genre-icon">
                <pos>0.515 0.15</pos> <!-- +.04 0-->
            </image>
            <text name="genre">
                <pos>0.545 .15</pos> <!-- +.045 0-->
            </text> 
            <badges name="badges">
                <pos>0.72 .051</pos>
            </badges>
            <text name="lastplayedtext">
                <visible>false</visible>
            </text>

            <datetime name="lastPlayedDate">
                <visible>false</visible>
            </datetime>
            <gamelistinfo name="gameCountN">
                <visible>false</visible>
            </gamelistinfo>             
        </view>
    </aspectRatio>
     <aspectRatio name="21:9">
        <view name="gamelist">
            <datetime name="lastPlayedDate">
                <pos>0.783 .1 </pos>
            </datetime>
            <grid name="game-grid">
			    <pos>.05 .22</pos>
            </grid>
            <image name="section-logo">
                <pos>0.03 0.03</pos>
                <size>0.2 0.15</size>
            </image>    	            
        </view>
    </aspectRatio>
</theme>

