<theme>
    <!-- System View -->
    <view name="system">   
        <!-- System carousel -->
         <textlist name="sys-list">
               <origin>0 0</origin>
               <pos>${listPos}</pos>
               <size>.24 .5</size>
               <fontPath>${listFont}</fontPath>
               <selectorColor>${selColor}</selectorColor>
               <fontSize>${listFontSize}</fontSize>
               <selectorHeight>0.0598</selectorHeight>
               <selectorWidth>0.245</selectorWidth>
               <lineSpacing>${listLineSpacing}</lineSpacing>
               <letterCase>lowercase</letterCase>
               <selectorVerticalOffset>-.015</selectorVerticalOffset>
               <selectorHorizontalOffset>-.0074</selectorHorizontalOffset>
               <primaryColor>${subColor}</primaryColor>
               <secondaryColor>bcac26</secondaryColor>
               <selectedColor>${highlightColor}</selectedColor>
               <indicators>ascii</indicators>
               <systemNameSuffix>${highlightColor}</systemNameSuffix>
               <selectorImagePath>./_inc/images/selectorSML.webp</selectorImagePath>
               <textHorizontalScrollDelay>0.5</textHorizontalScrollDelay>
            </textlist>
            <image name="sys-logo">
                  <pos>0.3 0.06</pos>
                  <maxSize>0.4 0.29</maxSize>
                  <path>./_inc/systems/logos/${system.theme}.webp</path>
                  <default>./_inc/systems/logos/default.webp</default>
                  <color>${highlightColor}</color>
                  <brightness>2</brightness>
                  <saturation>0</saturation>
                  <zIndex>14</zIndex>
            </image>
        
            
             <text name="system-description">
                <text>${systemDescription}</text>
                <pos>0.5 0.78</pos>
                <size>0.35 0.11</size>
                <fontSize>${paraFontSize}</fontSize>
                <lineSpacing>1.8</lineSpacing>
                <color>${transColor}</color>
                <fontPath>${pFont}</fontPath>
                <verticalAlignment>bottom</verticalAlignment>
                <horizontalAlignment>center</horizontalAlignment>
                <origin>0.5 0</origin>
                <container>true</container>
             </text>
             <image name="sel-gamart">
                <pos>0.8 0.52 </pos>
                <maxSize>0.3 0.3</maxSize>
                <origin>.5 .5 </origin>
                <saturation>0</saturation>
                <color>${highlightColor}90</color>
                <imageType>physicalmedia,3dbox,cover</imageType> 
                <default>./_inc/images/default-box.webp</default>
            <zIndex>14</zIndex>
            </image>
             <text name="gameCountL">
                <pos>0.78 0.49</pos>
                <origin>0 0</origin>
                <size>0.2 0.05</size>
                <systemdata>gamecount</systemdata>
                <fontSize>${titlemFontSize}</fontSize>
                <fontPath>${labelFont}</fontPath>
                <letterCase>uppercase</letterCase>
                <lineSpacing>1.1</lineSpacing>
                <horizontalAlignment>center</horizontalAlignment>
                <color>${baseColor}</color>
             </text>
             <image name="OVRGRID2">
               <pos>0 0</pos>
               <cropSize>1 1</cropSize>
               <path>./_inc/images/ovrgrid2.webp</path>
               <color>${gifColor}</color>
               <opacity>.5</opacity>
               <zIndex>13</zIndex>
            </image>
            <animation name="hud-ele">
               <pos>0.05 0.75</pos>
               <size>0.2 0.1</size>
               <path>./_inc/images/hudele2.gif</path>
               <color>${gifColor}</color>
               <zIndex>11</zIndex>
               <opacity>.2</opacity>
            </animation>
             <gameselector name="gselect">
                <selection>random</selection>
                <gameCount>10</gameCount>
             </gameselector>
             
            <image name="backgroundpromo">
               <brightness>${vidBright}</brightness>
               <saturation>${vidSat}</saturation>
               <color>${vidColor}</color>
            </image>  
    </view>
   <aspectRatio name="21:9">
        <view name="system"> 
            <image name="sys-logo">
               <pos>0.375 0.03</pos>
               <maxSize>0.25 0.20</maxSize>
            </image>   
        </view> 
    </aspectRatio>
    <aspectRatio name="4:3">
      <view name="system">

            <image name="sel-gamart">
                <pos>0.85 0.52 </pos>
                <maxSize>0.3 0.3</maxSize>
            <zIndex>14</zIndex>
            </image>
             <text name="gameCountL">
                <pos>0.8 0.49</pos>
             </text>
             <image name="OVRGRID2">
               <visible>flase</visible>
             </image>
      </view> 
    </aspectRatio>
 

</theme>
